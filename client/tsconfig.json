{
  "compilerOptions": {
    "module": "es6", // should not be commonjs when using webpack
    "target": "es6",
    "moduleResolution": "node",
		"strict": true,
		"noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false, // not recommended!
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "preserveConstEnums":true,
    "removeComments": true,
    "sourceMap": true,
    "rootDir": "src"
  },
}