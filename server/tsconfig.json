{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "strict": false, 
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": false, // not recommended!
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "preserveConstEnums":true,
        "removeComments": true, 
        "isolatedModules": false,         
        "inlineSourceMap": true, 
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "./dist/"
    },
}