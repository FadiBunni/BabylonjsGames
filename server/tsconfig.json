{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,    
        "isolatedModules": false, 
        "preserveConstEnums": true,
        "strict": false,  
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "outDir": "./bundle/",                                            
        "moduleResolution": "node",
        "inlineSourceMap": true, 
        "typeRoots": [
            "./node_modules/babylonjs",
            "./node_modules/@types"
        ],
        "types":["babylonjs"],
    },
    "include": [
        "src/**/*.ts", "Server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}